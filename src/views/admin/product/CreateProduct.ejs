<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../partials/head') %>
  <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
  <script src="https://cdn.ckeditor.com/ckeditor5/36.0.1/super-build/ckeditor.js"></script>
  <script src="/js/select2.js"></script>
  <script src="/js/handleImg.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
</head>
<body>
    <%- include('../../partials/menu') %>
    <div class="admin-container">
      <%- include('../../partials/slider') %>
        <div class="admin-right">
            <div class="row mt-5">
                <div class="col-12"><h3>Thêm sản phẩm</h3></div>
                <form action="/productCreate" method="post" class="col-6" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Tên sản phẩm</label>
                        <input type="text" class="form-control" name="name" placeholder="Thêm tên sản phẩm">
                    </div>
                    <div class="form-group">
                        <label>Giá sản phẩm</label>
                        <input type="text" class="form-control" name="price" placeholder="Thêm giá sản phẩm">
                    </div>
                    <div class="form-group">
                        <label>Ảnh đại diện</label>
                        <br>
                        <label id="upload" class="btn btn-dark" for="formFile" class="form-label">Upload</label>
                        <input onchange="onChangeSingleImage()" class="form-control-file" type="file" placeholder="Ảnh đại diện" name="feature_image" id="formFile" hidden>
                        <div class="col-12 my-2">
                            <div class="row">
                                <img id="img" class="product-img" src="" alt="" style="display: none;">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Ảnh chi tiết</label>
                        <br>
                        <label class="btn btn-dark my-1" for="formFileMultiple" class="form-label">Upload</label>
                        <input onchange="onChangeMultipleImage(event)" class="form-control-file" type="file" placeholder="Ảnh chi tiết" name="image_details" multiple id="formFileMultiple" hidden>
                        <div id="image-details"></div>
                    </div>
                    <div class="form-group">
                        <label>Chọn danh mục</label>
                        <select class="form-control select2_init" name="cartegory_id">
                            <option value="0">Chọn danh mục</option>
                            <% for(let i=0; i<data.length; i++){ %>
                                <option value=<%=data[i].id%>><%=data[i].name%></option>
                            <% } %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Nhập tags cho sản phẩm</label>
                        <select name="tags" class="form-control tag_select2_choose" multiple="multiple">
                            
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label>Nhập nội dung</label>
                        <textarea class="form-control" id="editor" name="content"></textarea>
                    </div>

                    <button class="btn btn-primary mt-2">Submit</button>
                </form>
            </div>
        </div>
    </div>

    <!-- script -->
    <script src="/js/ckeditor.js"></script>
</body>
</html>