<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../partials/head') %>
  <script src="/js/handleImg.js"></script>
</head>
<body>
    <%- include('../../partials/menu') %>
    <div class="admin-container">
      <%- include('../../partials/slider') %>
        <div class="admin-right">
            <div class="row mt-5">
                <div class="col-12"><h3>Thêm slider</h3></div>
                <form action="/sliderEdit/<%=slider.id%>" method="post" class="col-6" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Tên slider</label>
                        <input value="<%=slider.name%>" type="text" class="form-control" name="name" placeholder="Thêm tên slider">
                    </div>
                    
                    <div class="form-group">
                        <label>Ảnh đại diện</label>
                        <br>
                        <label id="upload" class="btn btn-dark" for="formFile" class="form-label">Upload</label>
                        <input onchange="onChangeSingleImage()" class="form-control-file" type="file" name="slider_image" id="formFile" hidden>
                        <div class="col-12 my-2">
                            <div class="row">
                                <img id="img" class="product-img" src="<%=slider.image%>" alt="">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Mô tả</label>
                        <textarea class="form-control" placeholder="Nhập mô tả slider" name="description" rows="4"><%=slider.description%></textarea>
                    </div>

                    <button class="btn btn-primary mt-2">Submit</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>