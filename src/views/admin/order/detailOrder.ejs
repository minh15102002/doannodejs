<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../partials/head') %>
</head>
<body>
    <%- include('../../partials/menu') %>
    <div class="admin-container">
      <%- include('../../partials/slider') %>
        <div class="admin-right">
            <div class="row mt-5">
                <div class="col-12"><h3>Thông tin khách hàng</h3></div>
                <div class="col-6">
                    <label>Tên khách hàng: <%=customer.name%></label>
                </div>                   
                <div class="col-6">
                    <label>Số điện thoại: <%=customer.phone_number%></label>
                </div>
                <div class="col-12">
                    <label>Địa chỉ: <%=customer.address%></label>
                </div>
                <div class="col-12">
                    <label class="col-6">Danh sách sản phẩm:</label>
                    <table class="table">
                        <thead>
                            <tr>
                                <td>STT</td>
                                <td>Tên sản phẩm</td>
                                <td>Ảnh</td>
                                <td>Số lượng</td>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i=0;i<products.length;i++){ %>
                                <tr>
                                  <th scope="row" class="col-3"><%= i+1 %></th>
                                  <td class="col-3"><%= products[i].name %></td>
                                  <td class="col-5">
                                    <img class="product-img" src="<%=products[i].feature_image%>" alt="">
                                  </td>
                                  <td class="col-3"><%=products[i].quantity%></td>
                                </tr>
                              <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>