<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../partials/head') %>
</head>
<body>
  <%- include('../../partials/menu') %>
    <div class="admin-container">
      <%- include('../../partials/slider') %>
      <div class="admin-right">
          <div class="row">
              <div class="col-12"><h3>Danh sách đơn hàng</h3></div>
              <div class="col-md-12">
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Khách hàng</th>
                        <th scope="col">Số điện thoại</th>
                        <th scope="col">Địa chỉ</th>
                        <th scope="col">Ngày đặt</th>
                        <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for(let i=0;i<customers.length;i++){ %>
                        <form action="/orderDelete" method="post">
                          <tr>
                          <th scope="row" class="col-2"><%= i+1 %></th>
                          <td class="col-2"><%= customers[i].name %></td>
                          <td class="col-2"><%= customers[i].phone_number %></td>
                          <td class="col-2"><%= customers[i].address %></td>
                          <td class="col-2"><%= customers[i].createdAt %></td>
                          <td class="col-2">
                            <a href="/orderDetail/<%=customers[i].id %>" class="btn btn-success">Xem</a>
                              <input type="text" name="id" value="<%=customers[i].id %>" hidden>
                              <button class="btn btn-danger">Xóa</button>
                          </td>
                        </tr>
                      </form>
                      <% } %>
                  </tbody>
                </table>
              </div>
          </div>
        </div>
    </div>
</body>
</html>