<header id="header">
    <div class="header-top">
        <div class="container">
            <div class="col-sm-6">
                <div class="contactinfo">
                    <ul class="nav nav-pills">
                        <li><a href="#"><i class="fa fa-phone"></i> +2 95 01 88 821</a></li>
                        <li><a href="#"><i class="fa fa-envelope"></i> info@domain.com</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="social-icons pull-right">
                    <ul class="nav nav-right">
                        <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                        <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fab fa-linkedin"></i></a></li>
                        <li><a href="#"><i class="fab fa-dribbble"></i></a></li>
                        <li><a href="#"><i class="fab fa-google-plus"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    
    <div class="header-middle">
        <div class="container">
            <div class="logo pull-left">
                <a href="/"><img src="/images/logo1.jpg" alt="" /></a>
            </div>
            <div class="search">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn py-1 btn-danger">Search</button>
            </div>
            <div class="col-sm-8">
                <div class="shop-menu pull-right">
                    <ul class="nav nav-right">
                        <li class="btn btn-cart mt-lg-4"><a href="/cart"><i class="fa fa-shopping-cart"></i> Cart</a></li>
                        <li>
                            <%if(lcIsAuthenticated){%>
                                <form action="/logout" method="post">
                                    <i class="fas fa-user"></i><span>Chào <%=lcAuthUser&&lcAuthUser.name?lcAuthUser.name:''%></span>
                                    <button class="btn btn-danger mt-lg-4"><i class="fas fa-sign-out-alt"></i> Đăng xuất</button>
                                </form>
                            <%}else{%>
                                <form action="/login">
                                    <!-- <button class="btn btn-danger mt-lg-4"><i class="fas fa-sign-in-alt"></i> Đăng nhập</button> -->
                                    <button class="btn btn-danger mt-lg-4"> Đăng nhập</button>
                                </form>
                            <%}%>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="header-bottom">
        <div class="container">
          <ul class="menu-bar nav">
            <%for(let i=0;i<menus.length;i++){%>
                <%if(menus[i].parent_id===0){%>
                    <li><a href="#"><%=menus[i].name%></a>
                        <ul class="menu-sub">
                            <%for(let j=0;j<menus.length;j++){%>
                                <%if(menus[j].parent_id===menus[i].id){%>
                                    <li><a href="#"><%=menus[j].name%></a>
                                        <ul class="menu-item">
                                            <%for(let k=0;k<menus.length;k++){%>
                                                <%if(menus[k].parent_id===menus[j].id){%>
                                                    <li><a href="#"><%=menus[k].name%></a>
                                                    </li>
                                                <%}%>
                                            <%}%>
                                        </ul>
                                    </li>
                                <%}%>
                            <%}%>
                        </ul>
                    </li>
                <%}%>
            <%}%>
          </ul>
        </div>
    </div>
</header>